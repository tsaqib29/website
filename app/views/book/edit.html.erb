<div class="yow">
    <div class="wow">
        <h1>Edit Data</h1>
        <%= form_tag("/book/update/#{@data.id}") do %>
        <div class="form">
            <div class="form-body">
                <label>Title</label>
                <input name="judul" value="<%= @data.title %>" required>

                <label>Author</label>
                <input name="pengarang" value="<%= @data.author %>" required>

                <label>No Isbn</label>
                <input name="isbn" value="<%= @data.isbn %>" required>

                <label>Description</label>
                <textarea name="deskripsi" required><%= @data.description %></textarea>
                
                <label for="kategori">Category:</label>
                <%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "name") %>
                <option value="<%= @data.isbn %>"></option>
                <br>
                <button type="submit">Save</button>
                <a href="/book/index">Back</a>
            </div>
        </div>
        <% end %>
    </div>
</div>