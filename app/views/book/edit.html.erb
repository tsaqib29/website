<div class="about-mail">
    <div class="container">
        <h1>Edit Data</h1>
        <%= form_tag("/book/update/#{@book.id}") do %>
        <div class="form">
        <div class="wiw">   
            <%= flash[:pesan] %>
        </div class="form">
            <div class="form-body">
                <label>Title</label>
                <input name="judul" value="<%= @book.title %>" required>

                <label>Author</label>
                <input name="pengarang" value="<%= @book.author %>" required>

                <label>No Isbn</label>
                <input name="isbn" value="<%= @book.isbn %>" required>

                <label>Description</label>
                <textarea name="deskripsi" required><%= @book.description %></textarea>
                
                <label for="kategori">Category:</label>
                <%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "name") %>
                <br>
                <button type="submit">Save</button>
                <a href="/book/index">Back</a>
            </div>
        </div>
        <% end %>
    </div>
</div>